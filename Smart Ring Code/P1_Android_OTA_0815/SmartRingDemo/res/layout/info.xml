        /> 
  
     <TextView 
        android:id="@+id/tv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5B5B5B"
        android:text="manufacture name"
        />
     
         <TextView 
        android:id="@+id/tv04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="#5B5B5B"
        android:text="Model ID:"
        />  
       
        </LinearLayout>
